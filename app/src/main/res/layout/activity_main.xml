<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="com.example.adityacomputers.asynctaskdemo.MainActivity">
<EditText
    android:layout_width="280dp"
    android:layout_height="50dp"
    android:id="@+id/etData"
    android:background="#ccdef9"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
        android:text="Add Data"
        android:background="#adafb2"
        android:textColor="#020a16"
        android:textSize="14dp"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@id/etData"
        android:layout_toRightOf="@id/etData"
/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtheading"
        android:text="Content from file"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/etData"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtcontent"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtheading"
        android:text="hi\nhow are you?"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:text="Delete File"
        android:textColor="#020a16"
        android:textStyle="bold"
        android:background="#adafb2"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_below="@id/txtcontent"/>
</RelativeLayout>
